/* ************* header start ************ */
.header {
 width: 100%;
 height: 90rpx;
 display: flex;
 justify-content: space-between;
 align-items: center;
}

.header .logo {
 position: relative;
}

.header .logo .btn {
 position: absolute;
 width: 100%;
 height: 100%;
 left: 0;
 top: 0;
 opacity: 0;
}

.header .logo text {
 color: darksalmon;
 padding-left: 15rpx;
}

.header .kefu {
 position: relative;
}
.header .kefu .btn {
 position: absolute;
 width: 100%;
 height: 100%;
 top: 0;
 left: 0;
 opacity: 0;
 background: none;
}

.header .logo image {
 width: 50rpx;
 vertical-align: middle;
}
.header .kefu image {
 width: 50rpx;
 animation: my-animation linear 1s infinite alternate;
}
/* ************* header end ============= */


/* ************* 轮播图 start ************ */
.view-swiper {
 width: 100%;
 height: 295rpx;
 background: pink;
}
.view-swiper swiper {
 height: 100%;
}
.view-swiper swiper swiper-item image {
 width: 100%;
 height: 100%;
}
/* ************* 轮播图 end ============= */




/* ************* 技术项 start ************ */
.scroll-technology {
 white-space: nowrap;
 padding: 30rpx 0;
}
.scroll-technology navigator {
 display: inline-block;
 text-align: center;
 width: 170rpx;
}
.scroll-technology navigator image {
 width: 100rpx;
 height: 100rpx;
}
.scroll-technology navigator text {
 font-size: 26rpx;
 padding-top: 10rpx;
}
/* ************* 技术项 end ============= */


/* ************* 作品展示 start ************ */
.view-works .top-bar {
 display: flex;
 justify-content: space-between;
 align-items: center;
 height: 60rpx;
}
.view-works .top-bar .title {
 display: flex;
 justify-content: space-between;
 align-items: center;
 height: 100%;
}
.view-works .top-bar .title image {
 width: 35rpx;
}
.view-works .top-bar .title text {
 font-size: 35rpx;
 padding-left: 15rpx;
}
.view-works .top-bar .more {
 font-size: 30rpx;
 color: #666;
}
/* ************* 作品展示 end ============= */


